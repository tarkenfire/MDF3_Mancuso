<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaLibraryActivity">
    
    
    <LinearLayout 
        android:id="@+id/library_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
	    <TextView 
	        android:id="@+id/library_header"
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:text="@string/library_header"
	    	android:textSize="20sp"
	    	android:textAlignment="center"
	    	android:layout_weight="3"
	    	android:layout_marginLeft="3dp"
	        />
	    <Button 
	        android:id="@+id/library_history_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="History"
	        android:layout_weight="1"
	        android:background="@drawable/list_item_background_selector"
	        android:textColor="@color/list_item_text_color"
	        android:layout_marginTop="1dp"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="3dp"
	        android:onClick="onHistoryClick"
	        />
    
    </LinearLayout>
    
    <ListView
        android:id="@+id/library_album_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	   	android:layout_below="@id/library_header_container"
	   	android:background="#000000"
	   	android:divider="#FFFFFF" 
	   	android:listSelector="@drawable/list_item_background_selector"
         />
    
</RelativeLayout>